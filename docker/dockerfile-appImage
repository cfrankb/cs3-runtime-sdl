#FROM ubuntu:22.04
FROM ubuntu:latest

ARG DEBIAN_FRONTEND=noninteractive

# Install toolchain and required build tools
RUN apt-get update && apt-get install -y \
    build-essential \
    autoconf \
    automake \
    libtool \
    pkg-config \
    wget \
    git \
    python3 \
    cmake \
    zip \
    ca-certificates && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# --- Final container setup ---
WORKDIR /workspace
CMD ["/bin/bash"]